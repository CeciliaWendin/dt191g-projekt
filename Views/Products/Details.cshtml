@model VetAB.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name</h1>

<div>
    <dl class="row">
        <dd class = "col-sm-10">
           <p> @Html.DisplayFor(model => model.Description)</p>
        </dd>
        <dd class = "col-sm-10">
           <img src="/images/@Html.DisplayFor(model => model.ImageName)" alt="" />
        </dd>
        <span class="badge badge-secondary">
            <dd class = "col-sm-10">
                Pris: @Html.DisplayFor(model => model.Price)
            </dd>
        </span>
    </dl>
</div>
<div>
    @if(User.IsInRole("Administrator") || User.IsInRole("Employee"))
{
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Redigera</a>
}
    <a class="btn btn-primary" asp-action="Index">Tillbaka</a>
</div>
